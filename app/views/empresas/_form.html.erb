<%# Ver CSS http://getbootstrap.com/css/%>
<%= form_for @empresa, :html => { :role=>"form", :class=>"form-horizontal" } do |f| %>
<div class="col-md-6">
<div class="form-group<%= @empresa.errors[:rut].any? ? " has-error has-feedback" : "" %>">
<%= f.label :rut, :class=>"col-sm-2 control-label" %>
<div class="col-sm-5">
  <%= f.text_field :rut, :class => 'form-control' %>
  <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
  <%if @empresa.errors[:rut].any? %>
    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    <p class="bg-warning"><%= @empresa.errors[:rut].to_s[/\w([^"]*)/] %></p>
  <% end -%>
</div>
</div>


